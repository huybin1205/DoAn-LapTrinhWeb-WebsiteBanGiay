@model WebsiteBanDoThoiTrang.Models.ThuongHieu
@{
    ViewBag.Title = "ThemMoiThuongHieu";
    Layout = "~/Views/Layout/_LayoutAdmin.cshtml";
}

<h2 style="margin-top:30px;text-align:center;">THÊM MỚI THƯƠNG HIỆU</h2>
<h2 style="color:red">@ViewBag.ThongBao</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Thêm nhà sản xuất</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <span>Tên nhà sản xuất</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenNXB, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenNXB, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span>Địa chỉ</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Diachi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Diachi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span>Điện thoại</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div style="text-align:center" class="col-md-offset-2 col-md-10">
                <input style="background:#2fce98;color:white;" type="submit" value="Create" class="btn btn-default" /> |
                @Html.ActionLink("Quay lại trang chủ Admin", "Index", "Admin")
            </div>
        </div>
    </div>
}


