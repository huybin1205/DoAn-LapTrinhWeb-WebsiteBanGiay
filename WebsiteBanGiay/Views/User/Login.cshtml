
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Layout/_LayoutUser.cshtml";
    <link href = "../Content/user.css" rel = "stylesheet" />
}

<div class="container" style="margin-top:79px">
    <div class="row" id="row-user-login">
        <div class="col-lg-12">
            <center>
                <div>
                    <div>
                        <h2>Đăng nhập</h2>
                    </div>
                    <div>
                        <h4>Tên đăng nhập</h4>
                        <input id="Text1" type="text" placeholder="Tên đăng nhập" />
                    </div>
                    <div>
                        <h4>Mật khẩu</h4>
                        <input id="Password1" type="password" placeholder="Mật khẩu" />
                    </div>
                    <div>
                        <input id="btnLogin" class="btn btn-danger" type="submit" value="Đăng nhập" />
                    </div>
                    <div>
                        <a href="@Url.Content("/User/Register")" class="btn btn-info" style="width:300px;color:white;font-size:15px">Đăng ký</a>
                    </div>
                    <div>
                        <h5>
                            <a href="#">Quên mật khẩu?</a>
                        </h5>
                    </div>
                </div>
            </center>
        </div>
    </div>
</div>


